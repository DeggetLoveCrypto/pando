{
  "extends": ["standard", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "valid-jsdoc": "error",
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "semi": false,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "jsxBracketSameLine": false
      }
    ],
    "linebreak-style": ["error", "unix"]
  }
}
