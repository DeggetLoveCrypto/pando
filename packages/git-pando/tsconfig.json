{
  "exclude": ["node_modules", "**/*.spec.ts"],
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "./lib",
    "target": "es5",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "lib": ["es2017", "es2015", "dom"],
    "typeRoots": [
      "node_modules/@0xproject/typescript-typings/types",
      "node_modules/@types"
    ]
  }
}
